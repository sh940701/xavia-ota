# The base URL where the application is hosted, this is used to download assets by the client
HOST=http://localhost:3000

# The type of storage to use for binary files (options: local, supabase)
BLOB_STORAGE_TYPE=local

# The type of database to use (options: postgres, supabase)
DB_TYPE=postgres

# Code Signing
# Base64 encoded private key for code signing
PRIVATE_KEY_BASE_64='your-private-key-in-base-64'

# LOGIN
# Password for admin login endpoint verification
ADMIN_PASSWORD=your-admin-password

# Secret used to sign/verify admin session cookies (must be strong in production)
ADMIN_SESSION_SECRET=your-admin-session-secret

# Optional: admin session ttl in seconds (default: 43200 = 12h)
ADMIN_SESSION_MAX_AGE_SECONDS=43200

# Upload key to verify uploader has right to publish updates
# Change this to a strong password in production
UPLOAD_KEY=abc123def456

# DATABASE
# PostgreSQL database user
POSTGRES_USER=postgres
# PostgreSQL database password
POSTGRES_PASSWORD=postgres
# PostgreSQL database name
POSTGRES_DB=releases_db
# PostgreSQL database host
POSTGRES_HOST=localhost
# PostgreSQL database port
POSTGRES_PORT=5432